<Page x:Class="Calculator.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="using:Calculator.Controls"
      Loaded="PageLoaded"
      Background="MintCream">

    <!-- Resources -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

		<StackPanel Width="1000" Margin="100">

			<StackPanel HorizontalAlignment="Right">
				<Image x:Name="abacus_png" Source="Assets/abacus.png" Width="100" Height="80" HorizontalAlignment="Right" Margin="10,10,10,0" VerticalAlignment="Top"/>
			</StackPanel>
			
			<StackPanel>
				
				<TextBlock Text="Universal Calculator" FontSize="60" FontWeight="Bold" Margin="10,0,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

			<StackPanel Margin="10,0,0,0" HorizontalAlignment="Center" Orientation="Vertical">
				<Button Content="Math Calculator" Width="500" Height="60" FontSize="30" Margin="10" Click="MathCalculator_Click"/>
				<Button Content="Mortgage Calculator" Width="500" Height="60" FontSize="30" Margin="10"  Click="MortgageCalculator_Click"/>
				<Button Content="Currency Calculator" Width="500" Margin="10" Height="60" FontSize="30" Click="CurrencyConverter_Click"/>
				<Button Content="Exit" Width="500" Height="60" Margin="10" FontSize="30" Click="ExitButton_Click"/>
				<Button Content="Trip Calculator" Width="500" Margin="10" Height="60" FontSize="30" Click="TripCalculator_Click"/>
			</StackPanel>


		</StackPanel>
		







    </Grid>
</Page>

